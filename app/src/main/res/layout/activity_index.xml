<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Index">

    <ImageButton
        android:id="@+id/btnCafe"
        android:layout_width="365dp"
        android:layout_height="86dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#8BC34A"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/cafenezo" />

    <ImageButton
        android:id="@+id/btnEight"
        android:layout_width="365dp"
        android:layout_height="86dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#D7DD1E1E"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toEndOf="@+id/btnCafe"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnCafe"
        app:layout_constraintTop_toBottomOf="@+id/btnCafe"
        app:srcCompat="@drawable/eightcuts" />

    <ImageButton
        android:id="@+id/btnGolden"
        android:layout_width="365dp"
        android:layout_height="86dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#E8B008"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toEndOf="@+id/btnEight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnEight"
        app:layout_constraintTop_toBottomOf="@+id/btnEight"
        app:srcCompat="@drawable/goldencrown" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cafe Enzo"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnCafe"
        app:layout_constraintEnd_toEndOf="@+id/btnCafe"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="@+id/btnCafe"
        app:layout_constraintTop_toTopOf="@+id/btnCafe"
        app:layout_constraintVertical_bias="0.608" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8 Cuts"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnEight"
        app:layout_constraintEnd_toEndOf="@+id/btnEight"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="@+id/btnEight"
        app:layout_constraintTop_toTopOf="@+id/btnEight"
        app:layout_constraintVertical_bias="0.521" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Golden Crown"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnGolden"
        app:layout_constraintEnd_toEndOf="@+id/btnGolden"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintStart_toStartOf="@+id/btnGolden"
        app:layout_constraintTop_toTopOf="@+id/btnGolden" />
</androidx.constraintlayout.widget.ConstraintLayout>